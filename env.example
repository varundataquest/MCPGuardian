# Database Configuration
DATABASE_URL=postgresql+psycopg://postgres:postgres@db:5432/mcp

# LLM Provider Configuration
LLM_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint_here

# Smithery API Configuration
SMITHERY_API_KEY=8cfea3c9-84ec-425b-b8d0-ecc9cd36a3e1

# Crawling Configuration
CRAWL_TIMEOUT_SECS=20
REGISTRIES_URLS=https://registry.1.example/index.json,https://registry.2.example/index.json
MAX_CANDIDATES=50

# MCP Server Configuration
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8080

# Optional: Playwright for dynamic page rendering
USE_PLAYWRIGHT=false

# Optional: FastAPI health endpoint
ENABLE_FASTAPI_HEALTH=true
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000 